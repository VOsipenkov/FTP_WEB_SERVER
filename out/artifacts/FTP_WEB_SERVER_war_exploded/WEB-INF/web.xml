<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>ListFiles</servlet-name>
        <servlet-class>controller.ListFilesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Preprocess</servlet-name>
        <servlet-class>controller.PreprocessingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>controller.DeleteFileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Download</servlet-name>
        <servlet-class>controller.DownloadFileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Upload</servlet-name>
        <servlet-class>controller.UploadFileServlet</servlet-class>
        <multipart-config>
            <max-file-size>3145728</max-file-size>
            <max-request-size>5242880</max-request-size>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListFiles</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Preprocess</servlet-name>
        <url-pattern>/precall</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Download</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>filesRepoPath</param-name>
        <param-value>C:\workspace\ServletsApps\FTP_WEB_SERVER\files\</param-value>
    </context-param>
    <context-param>
        <param-name>loggerPath</param-name>
        <param-value>C:\workspace\ServletsApps\FTP_WEB_SERVER\files\logger.txt</param-value>
    </context-param>

    <listener>
        <listener-class>listener.ContextStartedListener</listener-class>
    </listener>

</web-app>